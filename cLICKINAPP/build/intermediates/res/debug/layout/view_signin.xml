<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_pattern_bg">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/iv_topicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/c_header_bg"
            android:weightSum="1">

            <com.sourcefuse.clickinandroid.utils.ClickInTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="SIGN IN"
                android:textColor="@color/profile_usr_name"
                android:textSize="60sp"
                android:textStyle="bold"
                geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_topicon"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/white_border"
            android:padding="15dp">

            <EditText
                android:id="@+id/edt_email_phoneno"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/input_field"
                android:hint="@string/hint_email_no"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:text="+919878492556"
                android:textColor="@color/signup_contry_code"
                android:textColorHint="@color/singn_forg"
                android:textSize="16sp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/edt_passwd"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/edt_email_phoneno"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_field"
                android:hint="@string/hint_pwd"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:text="aaaaaaaa"
                android:textColor="@color/signup_contry_code"
                android:textColorHint="@color/singn_forg"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_get_clickin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/c_getclicin_deactive" />

        <RelativeLayout
            android:id="@+id/ll_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_get_clickin"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_forgot_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:text="@string/txt_forget_pwd"
                android:textColor="@color/singn_forg"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|center"
                android:padding="10dp"
                android:text="@string/txt_signup"
                android:textColor="@color/singn_forg"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/home/mukesh/clickAMaster/cLICKINAPP/src/main/res/layout/view_signin.xml -->