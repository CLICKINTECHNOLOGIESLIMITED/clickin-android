    <!-- Video layout End  Location Layout Start -->
    <RelativeLayout
        android:id="@+id/rl_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <!-- Video Layout Sender...  -->
        <RelativeLayout
            android:id="@+id/rl_location_sender"
