                    android:background="@drawable/card_icon" />

                <TextView
                    android:id="@+id/rl_audio_text_two_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_audio_file_two_r"
                    android:padding="5dp"
                    android:text="Text with Clicks" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!-- Audio layout End  Video Layout Start -->
