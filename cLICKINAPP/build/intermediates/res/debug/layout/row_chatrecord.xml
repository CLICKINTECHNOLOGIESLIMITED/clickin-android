                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_audio_file_two_s"
                    android:padding="5dp"
                    android:text="Text with Clicks" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- Audio Layout receiver...  -->
        <RelativeLayout
            android:id="@+id/rl_audio_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_audio_type_one_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/rl_audio_file_one_r"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:background="@drawable/card_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_audio_type_two_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rl_audio_type_one_r">

                <ImageView
