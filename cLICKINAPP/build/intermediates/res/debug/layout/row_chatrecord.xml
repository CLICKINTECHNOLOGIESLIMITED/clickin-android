<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Chat Type One  -->
    <RelativeLayout
        android:id="@+id/rl_type_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone">
        <!-- Sender View start -->
        <RelativeLayout
            android:id="@+id/rl_type_one_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_txt_type_one_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/newbg"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:text="Mukesh"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/rl_time_status_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_txt_type_one_sender"
                android:layout_toRightOf="@+id/tv_txt_type_one_sender"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type_one_time_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="11:28 AM"
                    android:textColor="@color/singn_forg"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_type_one_status_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/double_check" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Receiver View start -->

        <RelativeLayout
            android:id="@+id/rl_type_one_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_txt_type_one_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/whitechatbg"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Mukesh"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/rl_time_status_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_txt_type_one_receiver"
                android:layout_toRightOf="@+id/tv_txt_type_one_receiver"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type_one_time_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="11:28 AM"
                    android:textColor="@color/singn_forg"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_type_one_status_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/double_check" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!--Chat Type One  END  & Chat Type Two Start-->

    <RelativeLayout
        android:id="@+id/rl_type_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <!-- Receiver-->
        <RelativeLayout
            android:id="@+id/rl_type_two_image_upload_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_image_upload_r"
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/ll_type_two_clicks_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_image_upload_r"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_type_two_time_status_upload_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/iv_type_two_share_icon_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"

                        android:layout_marginRight="5dp"
                        android:background="@drawable/share_btn" />

                    <TextView
                        android:id="@+id/tv_type_two_time_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="11:28 AM"
                        android:textColor="@color/singn_forg"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_type_two_clicktext_r"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/image_bg"
                    android:text="Hi this is very bad Hi this is very bad Hi this is very bad Hi this is very bad Hi this is very bad Hi this is very bad"
                    android:textColor="@color/singn_forg"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- image upload  Receiver END & image upload Sender-->

        <RelativeLayout
            android:id="@+id/rl_type_two_image_upload_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_image_upload_s"
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY" />


            <LinearLayout
                android:id="@+id/ll_type_two_clicks_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/iv_image_upload_s"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_type_two_clicktext_s"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/image_bg"
                    android:text="Hi this is very bad Hi this is very bad Hi this is very bad Hi this is very bad Hi this is very bad Hi this is very bad"
                    android:textColor="@color/singn_forg"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/ll_type_two_time_status_upload_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/iv_type_two_share_icon_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/share_btn" />

                    <ProgressBar
                        android:id="@+id/iv_type_two_progress_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_type_two_time_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="11:28 AM"
                        android:textColor="@color/singn_forg"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <!-- image Sender upload layout End  Audio Layout Start -->

    <RelativeLayout
        android:id="@+id/rl_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
