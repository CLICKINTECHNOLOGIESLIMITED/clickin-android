                <ImageView
                    android:id="@+id/rl_audio_file_one_s"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:background="@drawable/card_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_audio_type_two_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_audio_type_one_s">

                <ImageView
                    android:id="@+id/rl_audio_file_two_s"
