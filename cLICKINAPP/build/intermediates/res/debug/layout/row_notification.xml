<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/appclr"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_notification_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/c_noti_comment" />

    <com.sourcefuse.clickinandroid.utils.ClickInTextView
        android:id="@+id/tv_notification_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_notification_type"
        android:text="Bregenja"
        android:textColor="@color/white"
        android:textSize="15sp"
        geekui:customFont="AvenirNextLTPro-MediumCn_0.otf" />


