<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_pattern_bg">

    <RelativeLayout
        android:id="@+id/rl_laout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_toboard"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/gray_border">

        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"

            android:weightSum="2">

            <Button
                android:id="@+id/btn_phb"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/c_phonebook_pink" />

            <Button
                android:id="@+id/btn_fb"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/c_fb_grey" />


        </LinearLayout>

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:id="@+id/tv_clickers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_tab"
            android:layout_centerHorizontal="true"
            android:paddingTop="2dp"
            android:text="@string/txt_already_on_click"
            android:textColor="@color/dark_gray"
            android:textSize="18sp"
            android:textStyle="bold"
            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:id="@+id/tv_clickersII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_clickers"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:text="@string/txt_already_on_clickII"
            android:textColor="@color/dark_gray"
            android:textSize="13sp"
            android:textStyle="bold"
            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />

        <View
            android:id="@+id/devider0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_clickersII"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/dark_gray" />


        <ListView
            android:id="@+id/list_current_clickers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_back"
            android:layout_below="@+id/devider0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:divider="@null"
            android:paddingBottom="5dp"
            android:scrollbars="none" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp"
            android:background="@drawable/c_back_footer">

            <TextView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="33dp"
                android:background="@drawable/c_back" />

            <TextView
                android:id="@+id/btn_middle_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33dp"
                android:background="@drawable/c_back"
                android:gravity="bottom" />


            <TextView
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="33dp"
                android:background="@drawable/c_next" />

        </RelativeLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_toboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/c_current_clickers" />

</RelativeLayout><!-- From: file:/home/monika/gitcodeClickin/cLICKINAPP/src/main/res/layout/view_currentclickers.xml -->