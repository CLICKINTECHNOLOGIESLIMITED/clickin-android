<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    >

    <ImageView
        android:id="@+id/iv_usr"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/default_profile" />
    <TextView
        android:id="@+id/tv_white"
        android:layout_width="45dp"
        android:layout_height="2dp"
        android:layout_below="@+id/iv_usr"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_clickers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_usr"
        android:text="Bregenja"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/follow_pink" />

</RelativeLayout><!-- From: file:/home/dell/Github/Clickin/clickin-andoid/cLICKINAPP/src/main/res/layout/row_currentclickerslist.xml -->