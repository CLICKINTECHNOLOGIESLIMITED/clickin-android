<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_border_alert">


    <com.sourcefuse.clickinandroid.utils.ClickInTextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Please enter your email:"
        android:textColor="@color/black"
        geekui:customFont="AvenirNextLTPro-MediumCn_0.otf" />

    <EditText
        android:id="@+id/edt_getemailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:hint="Enter your emailID"
        android:inputType="textEmailAddress"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <View
        android:id="@+id/v_backdevider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/edt_getemailid"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_backdevider"
        android:background="@drawable/white_border_alert"
        android:orientation="horizontal"

        android:weightSum="2">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Cancel" />

        <View
            android:id="@+id/vertical_backdevider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/text"
            android:background="@color/black" />

        <Button
            android:id="@+id/dialog_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Continue" />
    </LinearLayout>
</RelativeLayout><!-- From: file:/home/akshit/Desktop/gitforclickin-22oct/clickin-andoid/cLICKINAPP/src/main/res/layout/alert_forgot_password.xml -->