<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_jk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:id="@+id/tv_usr_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="Bregenja"
            android:textColor="@color/owner_relation_partner_name"
            android:textSize="16sp"
            android:textStyle="normal"
            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />

        <RelativeLayout
            android:id="@+id/rl_kl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_usr_name"
            android:background="@color/white"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <RelativeLayout
                android:id="@+id/rl_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-8dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/iv_usr_pic"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="-8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                     />

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp">

                    <com.sourcefuse.clickinandroid.utils.FeedImageView
                        android:id="@+id/iv_usr_pic_"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="-8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/btn_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_usr_pic"
                    android:background="@drawable/owner_profile_eye_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/btn_delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/owner_side_icon_cross" />
        </RelativeLayout>

        <View
            android:id="@+id/v_whiteview"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_below="@+id/rl_kl"
            android:background="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <com.sourcefuse.clickinandroid.utils.ClickInTextView
        android:id="@+id/tv_pending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_jk"
        android:background="@drawable/owner_list_roundedview"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:text="PENDING"
        android:textColor="@color/sign_hint"
        geekui:customFont="AvenirNextLTPro-MediumCn_0.otf" />

    <View
        android:id="@+id/v_devider"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@+id/tv_pending"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_devider"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btm_divider"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:background="@color/edit_profile_clr" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/monika/latestworkingCLickin/cLICKINAPP/src/main/res/layout/row_userprofile.xml -->