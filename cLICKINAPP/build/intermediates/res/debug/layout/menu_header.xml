            android:background="@drawable/female_crt" />

        <TextView
            android:id="@+id/iv_usr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
