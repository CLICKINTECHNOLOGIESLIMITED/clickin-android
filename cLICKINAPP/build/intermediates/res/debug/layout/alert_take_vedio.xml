<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_border_alert"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:weightSum="4">

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add your photo"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="normal"/>
        <View
            android:id="@+id/v_backdevider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_getemailid"
            android:background="@color/light_gray" />


        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:id="@+id/take_picture"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="CAPTURE A VEDIO"
            android:textAllCaps="true"
            android:textStyle="normal"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/dialog_text"/>

        <View
            android:id="@+id/v_backdevider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_getemailid"
            android:background="@color/light_gray" />

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:id="@+id/from_gallery"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="FROM YOUR GALLERY"
            android:textAllCaps="true"
            android:textStyle="normal"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/dialog_text"/>

        <View
            android:id="@+id/v_backdevider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_getemailid"
            android:background="@color/light_gray" />

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAllCaps="true"
            android:text="Cancel"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/dialog_text"
            android:background="@null"
            />

    </LinearLayout>

</LinearLayout>

