<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/c_trans"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rr_header"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/appclr">

            <ImageView
                android:id="@+id/iv_back_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:paddingBottom="5dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:src="@drawable/back_arrow" />


            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:paddingLeft="50dp"
                android:src="@drawable/chat" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/iv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blue_bg">

            <TextView
                android:id="@+id/tv_profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/txt_share"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/trade_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/c_pink" />

                <TextView
                    android:id="@+id/trd_clicks_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="40sp" />


                <TextView
                    android:id="@+id/trd_clicks_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/trade_image"
                    android:layout_alignRight="@+id/trade_image"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="60dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/card_text"
                android:layout_width="215dp"
                android:layout_height="190dp"
                android:layout_centerInParent="true"
                android:background="@drawable/c_white"
                android:gravity="center"
                android:maxLength="50"

                android:lines="5"
                android:inputType="text"
                android:hint="ENTER YOUR TEXT \n HERE"
                android:padding="8dp"
                android:singleLine="false" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/c_play" />

            <TextView
                android:id="@+id/btn_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/btn_play"
                android:background="@drawable/c_number_background"
                android:gravity="center"
                android:text="25"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btn_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/btn_five"
                android:background="@drawable/c_number_background"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btn_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/btn_four"
                android:background="@drawable/c_number_background"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btn_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/btn_three"
                android:background="@drawable/c_number_background"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btn_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/btn_two"
                android:background="@drawable/c_number_background"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_layout"
            android:layout_marginLeft="20dp"
            android:text="@string/trade_hint"
            android:textColor="@color/black" />


    </RelativeLayout>

</LinearLayout><!-- From: file:/home/dell/Github/Git_Clickin/clickin-andoid/cLICKINAPP/src/main/res/layout/view_tradecart1.xml -->