<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_usr_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">


    <TextView
        android:id="@+id/tv_search_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/search_message"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_invite_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_search_message"
        android:layout_marginLeft="5dp"
        android:background="@drawable/invite_btn" />

