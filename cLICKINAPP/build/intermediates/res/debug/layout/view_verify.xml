<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_pattern_bg" >

    <ImageView
        android:id="@+id/linearLayout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/e_enter_the_code"/>


    <LinearLayout
        android:id="@+id/ll_boxs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/linearLayout_top"
        android:layout_centerHorizontal="true"
        android:weightSum="4"
        android:layout_marginBottom="45dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edt_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/e_v_number_field_empty"
            android:gravity="center"
            android:padding="10dp"
            android:inputType="number"
            android:maxLength="1"
            android:cursorVisible="false"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"
            android:layout_weight="1" >
        </EditText>

        <EditText
            android:id="@+id/edt_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/e_v_number_field_empty"
            android:gravity="center"
            android:inputType="number"
            android:cursorVisible="false"
            android:maxLength="1"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"
            android:layout_weight="1" >
        </EditText>

        <EditText
            android:id="@+id/edt_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/e_v_number_field_empty"
            android:gravity="center"
            android:inputType="number"
            android:cursorVisible="false"
            android:maxLength="1"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"
            android:layout_weight="1" >
        </EditText>

        <EditText
            android:id="@+id/edt_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/e_v_number_field_empty"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:cursorVisible="false"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"
            android:layout_weight="1" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout_top"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hit_me_again" />

</RelativeLayout><!-- From: file:/home/dell/Github/Clickin/clickin-andoid/cLICKINAPP/src/main/res/layout/view_verify.xml -->