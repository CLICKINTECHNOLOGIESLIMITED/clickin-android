<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_layout"
    android:layout_width="fill_parent"
    android:layout_height="77dp"
    android:background="@drawable/r_owner_profile_bg">

    <View
        android:id="@+id/transparentLayout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/transparent"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"

        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"

            />

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/imageView1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/senderUser"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_margin_bw_imagenname"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/feed_senderuser"
                android:textIsSelectable="false"
                android:textSize="@dimen/feed_sender_user_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/doubleArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_margin_bw_imagenname"
                android:src="@drawable/arrow" />

            <!--<TextView-->
            <!--android:id="@+id/recieverUser1"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/feed_margin_bw_imagenname"-->
            <!--android:singleLine="false"-->
            <!--android:textColor="@android:color/darker_gray"-->
            <!--android:textIsSelectable="false"-->
            <!--android:textSize="@dimen/feed_sender_user_size"-->
            <!--android:textStyle="bold" />-->
        </LinearLayout>

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:id="@+id/recieverUser"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLayout"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imageView1"
            android:ellipsize="end"
            android:singleLine="false"
            android:textColor="@color/signin_color"
            android:textIsSelectable="false"
            android:textSize="@dimen/feed_sender_user_size"
            geekui:customFont="AvenirNextLTPro-MediumCn_0.otf" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/feed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="3m"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textIsSelectable="false"
                android:textSize="9sp"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout><!-- From: file:/monika/latestworkingCLickin/cLICKINAPP/src/main/res/layout/list_item_header_feed.xml -->