<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feed_image_layout">

        <ImageView
            android:id="@+id/feed_image"
            android:layout_width="@dimen/feed_image_height"
            android:layout_height="@dimen/feed_image_height"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/female_crt"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/audio"
            android:visibility="gone"
            android:id="@+id/audio_layout">
        <Button
            android:id="@+id/feed_audio_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/play"
           android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:visibility="gone"
            android:id="@+id/video_layout">
            <ImageView
                android:layout_width="@dimen/feed_image_height"
                android:layout_height="@dimen/feed_image_height"
                android:layout_centerHorizontal="true"
                android:background="@color/black"
                android:id="@+id/video_thumb"/>
            <Button
                android:id="@+id/feed_video_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/play"
                android:layout_centerInParent="true"
              />
        </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_clickin"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/feed_image_layout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/feed_clickin"
            android:gravity="left"
            android:visibility="visible">

            <TextView
                android:id="@+id/clickedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:text="0"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/clickInWhiteImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/clickedIn"
                android:paddingLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/heart_icon" />

            <TextView
                android:id="@+id/clickedInMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/clickInWhiteImage"
                android:padding="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_clickin"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/clickInstarImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/star_icon" />

            <TextView
                android:id="@+id/feed_star_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="No Stars"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_stars"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/clickInCommentImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/comment_icon"
                android:layout_gravity="top"/>

        <LinearLayout
            android:id="@+id/feed_comments_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/feed_comments_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all 4 comments"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:id="@+id/no_comments"
                    android:textStyle="bold"/>

                </LinearLayout>
            <LinearLayout
                android:id="@+id/feed_comments_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="charu"
                    android:textColor="@color/feed_senderuser"
                    android:textSize="16sp"
                    android:id="@+id/name2"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="charu"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/comment2"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/feed_comments_layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="charu"
                    android:textColor="@color/feed_senderuser"
                    android:textSize="16sp"
                    android:id="@+id/name3"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="charu"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/comment3"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/feed_comments_layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="charu"
                    android:textColor="@color/feed_senderuser"
                    android:textSize="16sp"
                    android:id="@+id/name4"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="charu"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/comment4"/>
            </LinearLayout>
         </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layout_comment"

            android:background="@color/dark_gray"
            android:paddingTop="5dp"></View>

        <RelativeLayout
            android:id="@+id/feed_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_all_button"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/feed_remove_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"

                android:scaleType="centerCrop"
                android:src="@drawable/remove"
                tools:ignore="RtlSymmetry" />
            <ImageView
                android:id="@+id/feed_report_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"

                android:scaleType="centerCrop"
                android:src="@drawable/report"
                tools:ignore="RtlSymmetry"
                android:layout_below="@+id/feed_remove_post"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_comment"
            android:gravity="left|center_horizontal|center_vertical"
            android:padding="5dp"
         android:layout_marginBottom="10dp" >

            <ImageView
                android:id="@+id/feed_star_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/star_btn" />

            <ImageView
                android:id="@+id/feed_comment_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/feed_star_image_button"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/comment_btn" />

            <ImageView
                android:id="@+id/feed_menu_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/report_icon"
                android:clickable="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yahoo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/home/dell/Github/Git_Clickin/clickin-andoid/cLICKINAPP/src/main/res/layout/feed_list_item.xml -->