<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appclr"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/rr_Other_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_selector_color"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feed_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:paddingTop="10dp"
                android:src="@drawable/c_feed" />


            <com.sourcefuse.clickinandroid.utils.ClickInTextView
                android:id="@+id/btn_the_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/feed_icon"
                android:paddingLeft="15dp"
                android:layout_marginLeft="5dp"
                android:text="@string/txt_feed"
                android:textColor="@color/menu_footer"
                android:textSize="20sp"
                geekui:customFont="AvenirNextLTPro-MediumCn_0.otf" />
        </LinearLayout>

        <View
            android:id="@+id/v_divider_feed"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_feed"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/dark_gray" />

        <LinearLayout
            android:id="@+id/ll_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_divider_feed"
            android:background="@drawable/menu_selector_color"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/find_frind_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:paddingTop="10dp"
                android:src="@drawable/c_find_friends" />


            <com.sourcefuse.clickinandroid.utils.ClickInTextView
                android:id="@+id/btn_find_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_divider_feed"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/txt_find_friend"
                android:textColor="@color/menu_footer"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                geekui:customFont="AvenirNextLTPro-MediumCn_0.otf" />
        </LinearLayout>

        <View
            android:id="@+id/v_divider_friend"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_friend"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/dark_gray" />


        <LinearLayout
            android:id="@+id/ll_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_divider_friend"
            android:background="@drawable/menu_selector_color"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/invite_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_divider_friend"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:paddingTop="10dp"
                android:src="@drawable/c_invite_icon" />

            <com.sourcefuse.clickinandroid.utils.ClickInTextView
                android:id="@+id/btn_find_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/txt_invite"
                android:textColor="@color/menu_footer"
                android:textSize="20sp"
                geekui:customFont="AvenirNextLTPro-MediumCn_0.otf" />
        </LinearLayout>

        <View
            android:id="@+id/v_divider_invite"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_invite"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/dark_gray" />

        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_divider_invite"
            android:background="@drawable/menu_selector_color"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_divider_invite"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:paddingTop="10dp"
                android:src="@drawable/c_settings" />

            <com.sourcefuse.clickinandroid.utils.ClickInTextView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/txt_setting"
                android:textColor="@color/menu_footer"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                geekui:customFont="AvenirNextLTPro-MediumCn_0.otf" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/home/monika/gitcodeClickin/cLICKINAPP/src/main/res/layout/menu_footer.xml -->