<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_pattern_bg">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:id="@+id/rl_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/get_ur_no_gimme_some_more"
            android:gravity="center"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_signupcontainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_profile_img"
            android:layout_marginTop="-30dp"
            android:background="@drawable/white_border"
            android:padding="8dp">

            <View
                android:id="@+id/devider0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="30dp"
                android:background="@color/devider" />

            <EditText
                android:id="@+id/etd_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/devider0"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:drawableLeft="@drawable/email_blue_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/txt_email"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lines="1"
                android:padding="5dp"
                android:textSize="16sp" />

            <View
                android:id="@+id/devider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/etd_email"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/devider" />

            <EditText
                android:id="@+id/edt_pwd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/devider1"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:drawableLeft="@drawable/password_blue_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/txt_pwd"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textSize="16sp" />

            <View
                android:id="@+id/devider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/edt_pwd"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/devider" />

            <EditText
                android:id="@+id/edt_re_pwd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/devider2"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:drawableLeft="@drawable/password_blue_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/txt_re_pwd"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_re_pwd"
                android:background="@color/dark_gray">

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/txt_dob" />


                <TextView
                    android:id="@+id/tv_reqf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/date_picker"
                    android:text="@string/txt_manda" />
            </RelativeLayout>


        </RelativeLayout>


        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/done_deactive" />

        <ImageView
            android:id="@+id/iv_profile_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_topbar"
            android:layout_centerHorizontal="true"
            android:background="@drawable/default_profile" />
    </RelativeLayout>


</RelativeLayout>
