<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_addvia_contact_action"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enterdigitmainbg">

    <LinearLayout
        android:id="@+id/iv_topicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/c_header_bg"
        android:orientation="vertical"
        android:weightSum="2">

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ADD SOMEONE"
            android:textColor="@color/screen_header"
            android:textSize="43sp"
            android:textStyle="bold"
            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="-50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TO CLICK WITH"
            android:textColor="@color/screen_header"
            android:textSize="43sp"
            android:textStyle="bold"
            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />

    </LinearLayout>


    <!--<ImageView-->
    <!--android:id="@+id/iv_topicon"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:background="@drawable/add_someone" />-->
    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_topicon"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/alert_border_partner"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/rr_contact_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_contact_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/default_profile" />

            <TextView
                android:id="@+id/tv_contact_name"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/iv_contact_icon"
                android:background="@drawable/search_bg"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="mahendra"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"></TextView>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rr_contact_iv"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/edt_text_cntry_cd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rr_contact_iv"
                android:layout_marginBottom="2dp"
                android:layout_weight="23.50"
                android:text="@string/txt_cntrycode"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"></TextView>


            <EditText
                android:id="@+id/edt_cntry_cd"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/background_grey"
                android:ems="10"
                android:inputType="textNoSuggestions"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"></EditText>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="86dp"
            android:layout_toRightOf="@id/ll2"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/edt_phone_no"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:background="@color/background_grey"
                android:ems="12"
                android:hint="Phone Number"
                android:inputType="phone|textNoSuggestions"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_gray"
                android:textSize="16sp"
                android:textStyle="bold">

                <requestFocus />
            </EditText>
        </LinearLayout>


        <Button
            android:id="@+id/btn_get_clickIn"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_search"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/c_getclicin_deactive" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:background="@drawable/c_back_footer"
        >

        <TextView
            android:id="@+id/btn_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/c_back"
            android:gravity="bottom"
           />
        <!--<Button-->
        <!--android:id="@+id/btn_go_back_num"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"       -->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:background="@drawable/c_back"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:gravity="center"-->
        <!---->
        <!--android:textColor="@color/white"-->
        <!--android:textStyle="bold" />-->
    </RelativeLayout>
</RelativeLayout>