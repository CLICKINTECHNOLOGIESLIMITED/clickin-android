<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivWaitingHeart"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/waiting_heart"/>

        <TextView
            android:id="@+id/tvWaiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivWaitingHeart"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/appclr"
            android:layout_marginBottom="16dp"
            android:text="Looks like your partner has not joined yet. Invite them using the below options"/>

        <Button
            android:id="@+id/btnInviteViaSMS"
            android:layout_below="@+id/tvWaiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Invite via SMS"
            android:background="@drawable/roundbutton"/>

        <Button
            android:id="@+id/btnInviteViaWhatsapp"
            android:layout_below="@+id/btnInviteViaSMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invite via WhatsApp"
            android:background="@drawable/roundbutton"/>

    </RelativeLayout>
</RelativeLayout>