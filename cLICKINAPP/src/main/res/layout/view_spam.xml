<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rr_header"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/appclr">

            <ImageView
                android:id="@+id/iv_back_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:paddingBottom="5dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:src="@drawable/back_arrow" />


            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:paddingLeft="50dp"
                android:src="@drawable/chat" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/iv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blue_bg">

            <TextView
                android:id="@+id/tv_profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/txt_setting"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/spam_header_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text="Spam or Abuse"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/report_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report something. "
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/spam_chose_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose One"
            android:textColor="@color/dark_gray"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:alwaysDrawnWithCache="false"
        android:background="@drawable/r_owner_profile_bg"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:paddingTop="2dp"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rbg_spam"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/spam_radio_one"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:button="@drawable/radio_button_drawable"
                    android:checked="true"
                    android:padding="10dp"
                    android:text="@string/spam_msg_one"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <RadioButton
                    android:id="@+id/spam_radio_two"
                    style="@style/whitebackground"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:button="@drawable/radio_button_drawable"
                    android:padding="10dp"
                    android:text="@string/spam_msg_two"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <RadioButton
                    android:id="@+id/spam_radio_three"
                    style="@style/whitebackground"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:button="@drawable/radio_button_drawable"
                    android:padding="10dp"
                    android:text="@string/spam_msg_three"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <RadioButton
                    android:id="@+id/spam_radio_four"
                    style="@style/whitebackground"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:button="@drawable/radio_button_drawable"
                    android:padding="10dp"
                    android:text="@string/spam_msg_four"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <RadioButton
                    android:id="@+id/spam_radio_five"
                    style="@style/whitebackground"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:button="@drawable/radio_button_drawable"
                    android:padding="10dp"
                    android:text="@string/spam_msg_five"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <RadioButton
                    android:id="@+id/spam_radio_six"
                    style="@style/whitebackground"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:button="@drawable/radio_button_drawable"
                    android:padding="10dp"
                    android:text="@string/spam_msg_six"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <RadioButton
                    android:id="@+id/spam_radio_seven"
                    style="@style/whitebackground"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:button="@drawable/radio_button_drawable"
                    android:padding="10dp"
                    android:text="@string/spam_msg_seven"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <RadioButton
                    android:id="@+id/spam_radio_eight"
                    style="@style/whitebackground"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:button="@drawable/radio_button_drawable"
                    android:padding="10dp"
                    android:text="@string/spam_msg_eight"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <RadioButton
                    android:id="@+id/spam_radio_nine"
                    style="@style/whitebackground"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="2dp"
                    android:button="@drawable/radio_button_drawable"
                    android:padding="10dp"
                    android:text="@string/spam_msg_nine"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </RadioGroup>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/spam_edit_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/box"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:hint="@string/spam_edit_hint"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="7dp"
                    android:textColor="@color/dark_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/btn_report"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/active_yes_btn"
                    android:gravity="center"
                    android:text="REPORT"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>