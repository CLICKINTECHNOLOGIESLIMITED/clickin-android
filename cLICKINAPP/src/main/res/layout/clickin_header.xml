<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/owner_profile_hedder"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_open_left_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp"
        android:paddingBottom="10dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:src="@drawable/owner_profile_top_icon" />

    <TextView
        android:id="@+id/tv_profile_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:textColor="@color/owner_profile_header_b"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_typing_last_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_profile_txt"
        android:textColor="@color/owner_profile_header_b"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_open_right_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:paddingTop="1dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:src="@drawable/owner_profile_hedder_icon" />


</RelativeLayout>