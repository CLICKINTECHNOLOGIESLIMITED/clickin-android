<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_root_share_screen"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/devider"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rr_header"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/appclr">

            <!--<ImageView-->
            <!--android:id="@+id/iv_back_noti"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginTop="6dp"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:paddingRight="30dp"-->
            <!--android:paddingTop="5dp"-->
            <!--android:src="@drawable/back_arrow" />-->


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/iv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blue_bg">

            <TextView
                android:id="@+id/tv_profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingBottom="8dp"
                android:text="@string/txt_share"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/r_owner_profile_bg">

        <LinearLayout
            android:id="@+id/linear_layout_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/devider"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/layout_image"
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/shr_user_image"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:visibility="gone"

                        />

                    <EditText
                        android:id="@+id/shr_caption"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:layout_toRightOf="@+id/shr_user_image"
                        android:background="@color/white"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:gravity="top"
                        android:hint="@string/share_hint"
                        android:inputType="textCapWords|textMultiLine"
                        android:lines="5"
                        android:maxLength="140"
                        android:padding="6dp"
                        android:singleLine="false"
                        android:textSize="16sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_card"
                    android:layout_width="fill_parent"
                    android:layout_height="208dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/shr_user_trade_image"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/trd_clicks_top_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3.5dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/trd_clicks_bottom_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="110dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/heading_top"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="60dp"
                        android:gravity="center"
                        android:lines="2"
                        android:textColor="@color/profile_usr_name"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/custom_card_msg"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:lines="5"
                        android:paddingRight="2dp"
                        android:singleLine="false"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/heading_bottom"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="117dp"
                        android:gravity="center"
                        android:lines="2"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/shr_caption_trade"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:layout_toRightOf="@+id/shr_user_trade_image"
                        android:background="@color/white"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:gravity="top"
                        android:hint="@string/share_hint"
                        android:inputType="textCapWords|textMultiLine"
                        android:lines="5"
                        android:maxLength="140"
                        android:paddingLeft="10dp"
                        android:paddingRight="4dp"
                        android:paddingTop="8dp"
                        android:singleLine="false"
                        android:textSize="16sp" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/share_clicks_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="9.5dp"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/share_clicks_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="3dp"
                            android:text="+09"
                            android:textColor="@color/white"
                            android:textSize="18sp"

                            android:textStyle="bold"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/share_clicks_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@+id/share_clicks_text"
                            android:src="@drawable/c_clicks_heart"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/share_chat_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/share_clicks_heart"
                            android:ellipsize="none"
                            android:maxEms="14"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/share_chat_textLong"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/share_chat_text"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="-3dp"
                            android:maxEms="14"
                            android:singleLine="false"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/profile_name_b"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:visibility="gone">

                    <com.sourcefuse.clickinandroid.utils.ClickInTextView
                        android:id="@+id/shr_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- 10"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />

                    <ImageView
                        android:id="@+id/shr_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/c_settings" />

                    <com.sourcefuse.clickinandroid.utils.ClickInTextView
                        android:id="@+id/shr_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/shr_facebook"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/facebook_share_background" />

                <!--<ImageView
                    android:id="@+id/shr_twitter"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/c_active_twitter" />

                <ImageView
                    android:id="@+id/shr_googleplus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/c_inactive_google" />-->
            </LinearLayout>

            <ImageView
                android:id="@+id/shr_btn_share"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/share_blue_btn" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>