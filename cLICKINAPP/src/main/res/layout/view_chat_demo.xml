<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingTop="5dp">

    <!--
     chat_parent_layout  need to set gravity left or right according need
     -->

    <!--
    rr_main_l layout need to set android:layout_toRightOf="@+id/rl_time_status_sender"
        IF IT IS SENDER LAYOUT

        OTHER WISE NO NEED TO SET android:layout_toRightOf="@+id/rl_time_status_sender"
    -->

    <RelativeLayout
        android:id="@+id/chat_parent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_audio_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/audio_play"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/media_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_chat_image"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:visibility="gone" />
        </LinearLayout>

        <!-- layout for clicks and text -Type 1-->
        <LinearLayout
            android:id="@+id/parent_clicks_area"
            android:layout_below="@+id/media_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:background="@drawable/newbg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/clicks_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/clicks_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="6dp"
                    android:text="+10"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_clicks_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/c_clicks_heart"
                    android:gravity="center_vertical"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/chat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="6dp"
                    android:text="TEXT CODE "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/long_chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="false"
                android:text="extra TEXT CODE "
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />
            <!--This textView for extra chat text to display in second line -->
        </LinearLayout>

        <!--SEND CARD First TIME start-->
        <RelativeLayout
            android:id="@+id/send_card_first_time"
            android:layout_width="260dp"
            android:layout_height="320dp"
            android:orientation="vertical"
android:visibility="gone"
            >

            <ImageView
                android:id="@+id/trade_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crh" />

            <TextView
                android:id="@+id/trd_clicks_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:paddingRight="5dp"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trd_custom_heading"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/trd_clicks_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="50dp"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/card_recieve_first_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_card_first_time"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone"
           >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_partner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mukesh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="will offer you clicks for "
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/c_middle_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_accept_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/c_card_accepted" />

                <ImageView
                    android:id="@+id/iv_resect_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/c_card_reject" />

                <ImageView
                    android:id="@+id/tv_counter_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/counterbtnx" />
            </LinearLayout>
        </LinearLayout>
        <!--SEND CARD First TIME  END-->


        <!--CARD COUNTER Layout START-->

        <RelativeLayout
            android:id="@+id/rl_acc_rej_card"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:visibility="gone"

            >

            <ImageView
                android:id="@+id/iv_static_acc_rej_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:src="@drawable/bh" />


            <TextView
                android:id="@+id/tv_custom_card_heading_acc_rej"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingRight="5dp"
                android:text="scsud busc scg sxhsa "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/trd_clicks_top_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trd_clicks_bottom_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="25dp"
                android:text="10 "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_acc_rej_card"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_acc_res_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Toby made a" />

            <TextView
                android:id="@+id/tv_acc_res_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Counter offer"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@drawable/c_middle_line" />

            <LinearLayout
                android:id="@+id/ll_cc_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_again_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_again_counter_acc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/c_card_accepted" />

                    <ImageView
                        android:id="@+id/iv_again_counter_rej"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/c_card_reject" />
                </LinearLayout>

                <com.sourcefuse.clickinandroid.utils.ClickInTextView
                    android:id="@+id/tv_counter_card_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/counterbtnx" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_acc_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/c_card_accept" />
        </LinearLayout>


        <!--CARD COUNTER Layout ENDRT-->


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_parent_layout"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/chat_parent_layout"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_for_share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/pb_loding"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_type_two_share_icon_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/share_btn"
                android:padding="10dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_for_share_icon"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="11:28 AM"
                android:textColor="@color/singn_forg"
                android:textSize="12sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_send_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/double_check"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>



