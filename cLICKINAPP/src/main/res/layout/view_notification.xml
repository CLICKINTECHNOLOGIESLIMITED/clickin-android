<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/user_bg">


        <TextView
            android:id="@+id/tv_notification_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/txt_notification"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <ImageView
            android:id="@+id/iv_back_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/back_arrow"

            android:paddingLeft="0dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/tv_notification_txt"
            android:clickable="true"

            />

    </RelativeLayout>

    <ListView
        android:id="@+id/list_click_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:divider="@drawable/c_noti_line"
        android:dividerHeight="1dp"
        android:scrollbars="none" />
</RelativeLayout>