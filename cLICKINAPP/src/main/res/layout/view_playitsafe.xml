<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_playitsafe_action"
    android:background="@drawable/white_pattern_bg">


    <LinearLayout
        android:id="@+id/iv_topicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:background="@drawable/c_header_bg"
        android:weightSum="2">

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="PLAY IT"
            android:textColor="@color/profile_usr_name"
            android:textSize="45sp"
            android:textStyle="bold"


            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
            />

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="top"
            android:text="SAFE"
            android:textColor="@color/profile_usr_name"
            android:textSize="67sp"
            android:textStyle="bold"
            android:layout_marginTop="-28dp"
            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
            />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_topicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_border"
        android:padding="15dp">

        <com.sourcefuse.clickinandroid.utils.ClickInEditBox
            android:id="@+id/edt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/c_pro_edit_field"
            android:ems="10"
            android:hint="@string/hint_enterpwd"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
            android:textColorHint="@color/sign_hint"
            android:textSize="16sp">

            <requestFocus />
        </com.sourcefuse.clickinandroid.utils.ClickInEditBox>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rr_re_enterpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_border"
        android:padding="15dp">

        <com.sourcefuse.clickinandroid.utils.ClickInEditBox
            android:id="@+id/edt_re_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/c_pro_edit_field"
            android:hint="@string/hint_re_enterpwd"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/sign_hint"
            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
            android:textSize="16sp"></com.sourcefuse.clickinandroid.utils.ClickInEditBox>


    </RelativeLayout>

    <Button
        android:id="@+id/btn_done_play"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rr_re_enterpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/done_rounded_light" />
</RelativeLayout>