<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:geekui="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/enterdigitmainbg">

    <RelativeLayout
        android:id="@+id/rr_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/appclr">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_arrow"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/iv_notification_list"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/chat"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_followerdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rr_header"
        >


        <ListView
            android:id="@+id/list_follower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:divider="@null"
            android:scrollbars="none"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_empty_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rr_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        >

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:id="@+id/tv_follower_msgI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/tv_follower_empty_msgone"
            android:textColor="@color/signup_contry_code"
            android:textSize="25sp"
            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
            android:textStyle="bold"/>

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:id="@+id/tv_follower_msgII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_follower_msgI"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/tv_follower_empty_msgtwo"
            android:textColor="@color/follower_list_user_txt"
            android:textSize="15sp"
            geekui:customFont="AvenirNextLTPro-MediumCn_0.otf"
            android:textStyle="bold"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blue_bg">

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:id="@+id/tv_profile_txt_wer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="@string/txt_follower"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"/>
    </RelativeLayout>
</RelativeLayout>