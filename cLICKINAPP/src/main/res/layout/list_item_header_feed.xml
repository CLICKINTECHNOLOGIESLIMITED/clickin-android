<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/feed_sticky_header_height"
    android:background="@color/transparent"
    >
    <View
        android:id="@+id/transparentLayout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/transparent"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"

            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/imageView1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/senderUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_margin_bw_imagenname"
                android:singleLine="true"
                android:text="Emma Smith"
                android:textColor="@color/feed_senderuser"
                android:textIsSelectable="false"
                android:textSize="@dimen/feed_sender_user_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doubleArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_margin_bw_imagenname"
                android:singleLine="true"
                android:text=">>"
                android:textIsSelectable="false"
                android:textSize="@dimen/feed_sender_user_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recieverUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_margin_bw_imagenname"
                android:singleLine="false"
                android:text="Some More more more"
                android:textColor="@android:color/black"
                android:textIsSelectable="false"
                android:textSize="@dimen/feed_sender_user_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:orientation="horizontal" >

            <TextView
                android:id="@+id/feed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="3m"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textIsSelectable="false"
                android:textSize="@dimen/feed_time__font_size"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>