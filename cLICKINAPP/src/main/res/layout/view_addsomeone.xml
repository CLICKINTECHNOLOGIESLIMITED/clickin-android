<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    android:id="@+id/btn_add_someone_action"
    android:background="@drawable/enterdigitmainbg">

    <LinearLayout
        android:id="@+id/iv_topicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:background="@drawable/c_header_bg"
        android:weightSum="2">

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:id="@+id/title_text_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:layout_centerHorizontal="true"
            android:text="ADD A"
            android:textColor="@color/screen_header"
            android:textSize="43sp"
            android:textStyle="bold"

            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
            />
        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:id="@+id/title_text_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="PARTNER"
            android:textColor="@color/screen_header"
            android:textSize="43sp"
            android:textStyle="bold"

            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
            android:layout_marginTop="-58dp"
            />

      

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_topicon"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/alert_border_partner"
        >

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <com.sourcefuse.clickinandroid.utils.ClickInEditBox
                android:id="@+id/edt_search_ph"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@drawable/searchboxtxtfield"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/txt_search_phonebook"
                android:padding="10dp"
                android:singleLine="true"
                android:layout_marginTop="11.65dp"
                geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
                android:layout_marginLeft="2dp"
                android:inputType="textCapWords"
                android:textColor="@color/black"
                android:textColorHint="@color/phone_no_clr"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/iv_keypad"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="11.65dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/keyboard" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_search"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="18dp"
            >

            <com.sourcefuse.clickinandroid.utils.ClickInTextView
                android:id="@+id/edt_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:layout_centerHorizontal="true"
                android:text="@string/text_add_partner"
                geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
                android:textColor="@color/sign_hint"
                android:textSize="14sp"/>

            </LinearLayout>
        <!-- Contact List Layout Start -->

        <RelativeLayout
            android:id="@+id/rr_con_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_search"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:visibility="gone">

            <ListView
                android:id="@+id/list_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dividerHeight="3dp"
                android:scrollbars="none" />
        </RelativeLayout>
        <!-- Contact List Layout End -->

    </RelativeLayout>


    <Button
        android:id="@+id/btn_been_invited"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/rejectprofilebtn" />
    <Button
        android:id="@+id/btn_do_itlatter"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_been_invited"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/addsomeonelaterbtn" />

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/c_back_footer"
        android:visibility="gone">

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/c_back"
            android:visibility="gone"
         />


    </RelativeLayout>

</RelativeLayout>

