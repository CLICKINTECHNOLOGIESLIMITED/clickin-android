<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    android:id="@+id/btn_add_someone_action"
    android:background="@drawable/white_pattern_bg">

    <LinearLayout
        android:id="@+id/iv_topicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/c_header_bg"
        android:weightSum="2">

        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:text="ADD A"
            android:textColor="@color/profile_usr_name"
            android:textSize="43sp"
            android:textStyle="bold"

            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
            />
        <com.sourcefuse.clickinandroid.utils.ClickInTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PARTNER"
            android:textColor="@color/profile_usr_name"
            android:textSize="43sp"
            android:textStyle="bold"

            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
            android:layout_marginTop="-58dp"
            />

      

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_topicon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_border"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.sourcefuse.clickinandroid.utils.ClickInEditBox
                android:id="@+id/edt_search_ph"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:hint="@string/txt_search_phonebook"
                android:padding="10dp"
                android:singleLine="true"
                geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
                android:textColor="@color/phone_no_clr"
                android:textColorHint="@color/sign_hint"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/iv_keypad"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/keyboard" />
        </LinearLayout>

        <!-- Contact List Layout Start -->

        <RelativeLayout
            android:id="@+id/rr_con_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_search"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:visibility="gone">

            <ListView
                android:id="@+id/list_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dividerHeight="3dp"
                android:scrollbars="none" />
        </RelativeLayout>
        <!-- Contact List Layout End -->

    </RelativeLayout>

    <Button
        android:id="@+id/btn_do_itlatter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/c_do_it_later" />

</RelativeLayout>