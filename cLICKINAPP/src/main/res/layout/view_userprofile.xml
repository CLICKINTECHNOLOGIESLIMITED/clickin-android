    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_header"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rr_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <RelativeLayout
                    android:id="@+id/rl_uig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/owner_profile_img_bg">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/owner_profile_name_b"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />


                    <ImageView
                        android:id="@+id/iv_usr_icon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:id="@+id/tv_user_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_usr_icon"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="15dp"
                        android:singleLine="false"
                        android:textColor="@color/owner_profile_address_m"
                        android:textSize="16sp"/>


                </RelativeLayout>

                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignBottom="@+id/rl_uig"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/owner_profile_icon"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_follower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rr_profile_pic"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/owner_follower_btn"
                android:gravity="center"
                android:text="@string/txt_follower"
                android:textColor="@color/profile_parter_nmae_b"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_follower"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/owner_follower_btn"
                android:gravity="center"
                android:text="@string/txt_following"
                android:textColor="@color/profile_name_b"
                android:textSize="20sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"

            android:layout_weight="1"
            android:orientation="vertical">


            <dev.dworks.libs.astickyheader.ui.PinnedSectionListView
                android:id="@+id/list_click_with_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:clipToPadding="false"
                android:divider="@null"
                android:footerDividersEnabled="false"
                android:overScrollFooter="@color/transparent"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="none"/>

            <!--<se.emilsjolander.stickylistheaders.StickyListHeadersListView
