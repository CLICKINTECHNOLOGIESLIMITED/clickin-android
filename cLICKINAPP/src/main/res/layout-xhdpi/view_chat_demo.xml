<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingTop="5dp">

    <!--
     chat_parent_layout  need to set gravity left or right according need
     -->

    <!--
    rr_main_l layout need to set android:layout_toRightOf="@+id/rl_time_status_sender"
        IF IT IS SENDER LAYOUT

        OTHER WISE NO NEED TO SET android:layout_toRightOf="@+id/rl_time_status_sender"
    -->

    <LinearLayout
        android:id="@+id/parent_shared_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/newbg_pinkleft"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <!-- layout for share header-->
        <RelativeLayout
            android:id="@+id/shared_header_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <com.sourcefuse.clickinandroid.utils.ClickInTextView
                android:id="@+id/shared_by_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                geekui:customFont="AvenirNextLTPro-MediumCn_0.otf"
                android:textColor="@color/text_color_share" />

            <com.sourcefuse.clickinandroid.utils.ClickInTextView
                android:id="@+id/shared_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/shared_by_name"
                android:text="You Want to share"
                android:textStyle="bold"
                geekui:customFont="AvenirNextLTPro-MediumCn_0.otf"
                android:textColor="@color/text_color_share" />

            <ImageView
                android:id="@+id/except_share"
                android:layout_width="206dp"
                android:layout_height="3dp"
                android:layout_below="@+id/shared_message"
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/chat_divider" />

            <ImageView
                android:id="@+id/incase_share"
                android:layout_width="266dp"
                android:layout_height="3dp"
                android:layout_below="@+id/shared_message"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:background="@drawable/chat_divider" />

        </RelativeLayout>

        <!--parent layout for all types of chat  -->
        <RelativeLayout
            android:id="@+id/chat_parent_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shared_header_view"
            android:visibility="visible">

            <!-- prafull code-->

            <!--layout for media -->
            <LinearLayout
                android:id="@+id/media_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_chat_image"
                    android:layout_width="206dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="1dp"

                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <com.sourcefuse.clickinandroid.utils.FeedImageView
                    android:id="@+id/iv_chat_image_"
                    android:layout_width="206dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:visibility="gone" />
            </LinearLayout>


            <!-- for audio starts-->

            <!-- layout for clicks and text -Type 1-->
            <ImageView
                android:id="@+id/temp_"
                android:layout_width="210dp"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_below="@+id/temp_layout"
                android:background="@color/color_"
                android:visibility="gone" />


            <!-- layout for clicks and text-for audio ends-->


            <!-- layout for clicks and text -Type 1-->
            <LinearLayout
                android:id="@+id/parent_clicks_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/media_layout"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/clicks_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/clicks_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="3dp"
                        android:text="+101"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_clicks_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/c_clicks_heart"
                        android:gravity="center_vertical|center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/chat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:maxEms="8"
                        android:layout_marginLeft="3dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/long_chat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxEms="12"
                    android:paddingBottom="5dp"
                    android:paddingLeft="3dp"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />
                <!--This textView for extra chat text to display in second line -->
            </LinearLayout>


            <!--SEND CARD First TIME start-->
            <RelativeLayout
                android:id="@+id/send_card_first_time"
                android:layout_width="240dp"
                android:layout_height="320dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/trade_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/trd_clicks_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4.5dp"
                    android:paddingRight="5dp"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/trd_custom_heading"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/trd_clicks_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="42dp"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:visibility="gone"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/temp_layout"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="2dp"
                android:background="@color/background_grey"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/iv_play_btn_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/soundicon_"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_play_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/audio_play"
                    android:visibility="gone" />


                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:visibility="gone" />/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/card_recieve_first_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_card_first_time"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:paddingTop="1dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/card_partner_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mukesh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="will offer you clicks for "
                        android:textStyle="bold"

                        />


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/c_middle_line" />

                <!--akshit Code-->

                <ImageView
                    android:layout_width="205dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/chat_divider" />

                <!--akshit Code Ends-->


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_accept_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/c_card_accepted" />

                    <ImageView
                        android:id="@+id/iv_reject_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/c_card_reject" />

                    <ImageView
                        android:id="@+id/tv_counter_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/counterbtnx" />
                </LinearLayout>
            </LinearLayout>
            <!--SEND CARD First TIME  END-->


            <!--CARD COUNTER Layout START-->

            <RelativeLayout
                android:id="@+id/rl_acc_rej_card"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:visibility="gone"

                >

                <ImageView
                    android:id="@+id/iv_static_acc_rej_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:src="@drawable/tradecardbg" />


                <TextView
                    android:id="@+id/tv_custom_card_heading_acc_rej"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingRight="5dp"
                    android:singleLine="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <com.sourcefuse.clickinandroid.utils.ClickInTextView
                    android:id="@+id/tv_card_heading_acc_rej"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="62dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:singleLine="false"
                    android:textColor="@color/profile_usr_name"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />

                <TextView
                    android:id="@+id/trd_clicks_top_ar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="5dp"
                    android:paddingRight="5dp"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_card_des_acc_rej"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/trd_clicks_bottom_ar"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="110dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:singleLine="false"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/trd_clicks_bottom_ar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="29dp"
                    android:text="10 "
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/acc_rej_layout_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl_acc_rej_card"
                android:orientation="vertical"
                android:paddingRight="3dp"
                android:paddingTop="5dp"
                android:visibility="gone">

                <com.sourcefuse.clickinandroid.utils.ClickInTextView
                    android:id="@+id/tv_acc_res_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Toby made a"
                    geekui:customFont="AvenirNextLTPro-MediumCn_0.otf"
                    android:textColor="@color/black"/>

                <com.sourcefuse.clickinandroid.utils.ClickInTextView
                    android:id="@+id/tv_acc_res_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:paddingRight="2dp"
                    android:text="COUNTER OFFER"
                    geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"
                    android:textColor="@color/black"

                    />

                <!--akshit Code-->
                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/chat_divider" />

                <!--akshit Code Ends-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:background="@drawable/c_middle_line" />

                <LinearLayout
                    android:id="@+id/ll_cc_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ll_again_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/iv_again_counter_acc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/c_card_accepted" />

                        <ImageView
                            android:id="@+id/iv_again_counter_rej"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/c_card_reject" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tv_counter_card_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/counterbtnx" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_acc_rec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/c_card_accept"
                    android:visibility="gone" />
            </LinearLayout>


            <!--CARD COUNTER Layout ENDRT  Share footer -->


        </RelativeLayout>


        <!--   for text view in share  case-->

        <LinearLayout
            android:id="@+id/parent_clicks_area_share"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/media_layout"
            android:layout_marginBottom="3dp"
            android:background="@color/profile_name_b"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/clicks_area_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/clicks_text_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:paddingLeft="5dp"
                    android:text="+101"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_clicks_heart_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/c_clicks_heart"
                    android:gravity="center_vertical|center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/chat_text_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:gravity="top"
                    android:maxEms="10"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"

                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/long_chat_text_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:ems="13"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:singleLine="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone" />
            <!--This textView for extra chat text to display in second line -->
        </LinearLayout>
        <!--   for text view in share case -->

        <ImageView
            android:id="@+id/incase_share_footer"
            android:layout_width="266dp"
            android:layout_height="3dp"
            android:layout_below="@+id/trade_image"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:visibility="gone"
            android:background="@drawable/chat_divider" />

        <LinearLayout
            android:id="@+id/shared_footer_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/chat_parent_layout"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <TextView
                android:id="@+id/shared_message_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/c_card_accepted" />

            <TextView
                android:id="@+id/shared_message_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_divider"
                android:layout_marginLeft="20dp"
                android:background="@drawable/c_card_reject" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_time_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/parent_shared_layout"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/parent_shared_layout"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_for_share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/pb_loding"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_type_two_share_icon_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/share_btn"
                android:padding="10dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_for_share_icon"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="11:28 AM"
                android:textColor="@color/singn_forg"
                android:textSize="10sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_send_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/r_single_tick"
                android:visibility="visible" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>


