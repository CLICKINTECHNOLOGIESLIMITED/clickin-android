<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rr_header"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/appclr">

            <ImageView
                android:id="@+id/iv_back_trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:paddingBottom="5dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:src="@drawable/back_arrow"
                android:visibility="gone" />


            <!--<ImageView-->
            <!--android:id="@+id/iv_notification"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:visibility="gone"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginTop="6dp"-->
            <!--android:paddingLeft="50dp"-->
            <!--android:src="@drawable/chat" />-->
            <LinearLayout
                android:id="@+id/Linear_layout1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingRight="6dp">


                <com.sourcefuse.clickinandroid.utils.ClickInTextView
                    android:id="@+id/textView_clicks_tabhost"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="2dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal|right"
                    android:singleLine="true"
                    android:text="43333"
                    android:textColor="@color/chat_notification"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />
                <!--<com.sourcefuse.clickinandroid.utils.ClickInTextView-->
                <!--android:id="@+id/textView_clicks_tabhost"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginBottom="-3dp"-->
                <!--android:layout_marginRight="4dp"-->
                <!--android:gravity="right"-->
                <!--android:text="43333"-->
                <!--android:ellipsize="end"-->
                <!--android:singleLine="true"-->
                <!--android:textColor="@color/chat_notification"-->
                <!--android:textSize="19sp"-->
                <!--android:textStyle="bold"-->
                <!--geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />-->

                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/r_click_icon" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/iv_profile"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:background="@drawable/blue_bg">

            <com.sourcefuse.clickinandroid.utils.ClickInTextView
                android:id="@+id/tv_profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="TRADE"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />
        </RelativeLayout>

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/H_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scrollbars="none"

        >


        <LinearLayout
            android:id="@+id/Linear_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.78"
            android:baselineAligned="false">

            <TabHost
                android:id="@+id/tabHost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_x="0dp"
                android:layout_y="0dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        ></TabWidget>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="false"

                        >

                        <com.sourcefuse.clickinandroid.utils.ClickInTextView
                            android:id="@+id/Layout_Tab_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            geekui:customFont="AvenirNextLTPro-BoldCn_0.otf"


                            />


                        <!--<com.sourcefuse.clickinandroid.utils.ClickInTextView-->
                        <!--android:id="@+id/Layout_Tab_2"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textStyle="bold"-->
                        <!--geekui:customFont="AvenirNextLTPro-BoldCn_0.otf" />-->
                        <!---->


                    </FrameLayout>
                </LinearLayout>
            </TabHost>

        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>


    <!--<ImageView-->
    <!--android:id="@+id/imageview_underline"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/Layout_Tab_2"-->
    <!--android:background="@drawable/tabbottomline"/>-->
</LinearLayout>
